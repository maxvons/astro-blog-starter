---
import BaseHead from "@components/BaseHead.astro";
import Header from "@components/Header.astro";
import Footer from "@components/Footer.astro";

interface Props {
  metadata: {
    title: string;
    description: string;
    image?: string;
  };
  pageTitle: string;
}

const { metadata, pageTitle } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={metadata.title}
      description={metadata.description}
      image={metadata.image}
    />
  </head>
  <body>
    <Header />
    <main>
      <h1>{pageTitle}</h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>
